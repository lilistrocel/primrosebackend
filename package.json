{
  "name": "coffee-machine-backend",
  "version": "1.0.0",
  "description": "Local backend replacement for coffee machine API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "init-db": "node src/database/init.js",
    "test": "jest",
    "test:compatibility": "node tests/compatibility-test.js",
    "health": "node health-check.js",
    "check-alerts": "node check-alerts.js",
    "check-alerts:show": "node check-alerts.js --show",
    "check-alerts:resolve": "node check-alerts.js --resolve-all",
    "dev:full": "powershell -ExecutionPolicy Bypass -File start-dev-clean.ps1",
    "dev:improved": "powershell -ExecutionPolicy Bypass -File start-dev-improved.ps1",
    "dev:debug": "powershell -ExecutionPolicy Bypass -File start-dev-improved.ps1 -ShowLogs",
    "dev:unix": "./start-dev.sh",
    "dev:windows": "start-dev.bat",
    "dev:health": "powershell -ExecutionPolicy Bypass -File start-dev-improved.ps1 -HealthOnly",
    "dev:stop": "powershell -ExecutionPolicy Bypass -File stop-dev.ps1",
    "dev:manage": "powershell -ExecutionPolicy Bypass -File manage-dev.ps1",
    "tunnel": "start-tunnel.bat",
    "tunnel:ngrok": "powershell -ExecutionPolicy Bypass -File start-with-tunnel.ps1 -TunnelService ngrok",
    "tunnel:localtunnel": "powershell -ExecutionPolicy Bypass -File start-with-tunnel.ps1 -TunnelService localtunnel",
    "tunnel:cloudflare": "powershell -ExecutionPolicy Bypass -File start-with-tunnel.ps1 -TunnelService cloudflare",
    "backend:start": "npm start",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "logs:backend": "type backend.log 2>nul || echo No backend log found",
    "logs:frontend": "type frontend.log 2>nul || echo No frontend log found",
    "network:config": "node update-network-config.js",
    "network:update": "node update-network-config.js",
    "network:fix-images": "node update-image-urls.js",
    "currency:config": "node update-currency-config.js",
    "currency:update": "node update-currency-config.js",
    "clean": "rimraf coffee_machine.db backend.log frontend.log node_modules/",
    "reset": "npm run clean && npm install && npm run frontend:install && npm run init-db"
  },
  "keywords": [
    "coffee",
    "machine",
    "api",
    "backend"
  ],
  "author": "Coffee Machine Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.4",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
