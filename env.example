# Coffee Machine Backend - Environment Configuration
# Copy this file to .env and update with your server details

# Environment
NODE_ENV=production

# Network Configuration
LOCAL_IP=192.168.1.100
FRONTEND_PORT=3001
BACKEND_PORT=3000
MOCK_PORT=3002
HOST=0.0.0.0

# Database
DB_PATH=./coffee_machine.db

# Logging
LOG_LEVEL=info
LOG_FILE=./coffee_machine.log

# CORS Configuration (automatically generated from IP settings)
# Frontend will connect to: http://LOCAL_IP:BACKEND_PORT
